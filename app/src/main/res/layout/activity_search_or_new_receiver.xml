<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SearchOrNewReceiver">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:padding="20dp"
      android:text="@string/jaecadastrado"
      android:layout_marginBottom="20dp"
      android:textAlignment="center"
      android:textSize="50dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <TextView
      android:id="@+id/textView3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="150dp"
      android:padding="20dp"
      android:text="@string/digiteseucpf"
      android:textSize="35dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.486"
      tools:layout_editor_absoluteX="27dp" />

  <androidx.appcompat.widget.SearchView
      android:id="@+id/edit_name"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/roundend_backhroundedttext"
      android:iconifiedByDefault="false"
      android:queryHint="@string/digitenomedoador"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/textView3" />



  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvReceivers"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="5dp"
      android:paddingBottom="20dp"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintBottom_toTopOf="@+id/btn_receber"
      app:layout_constraintTop_toBottomOf="@+id/edit_name"
      app:layout_constraintVertical_bias="1.0"
      tools:layout_editor_absoluteX="0dp" />

  <Button
      android:id="@+id/btn_receber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      android:layout_marginBottom="36dp"
      android:background="@drawable/rectangle_button"
      android:backgroundTint="@color/green200"
      android:drawableLeft="@drawable/baseline_person_24"
      android:padding="25dp"
      android:text="@string/cadastrarparareceber"
      android:textAlignment="center"
      android:textSize="20dp"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>